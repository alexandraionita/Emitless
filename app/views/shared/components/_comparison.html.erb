<div class="comparison-container">
  <div class="comparison-card small-card small-card-left">
    <h3 class="emits"><%= @basket[1][1][:emissions].round() * 10 %> Emits</h3>

    <!-- <img class="<%= @basket[1][0].to_s %>" src="https://cdn.freebiesupply.com/logos/large/2x/tesco-1-logo-png-transparent.png" alt="<%= @basket[1][0].to_s %>"> -->
    <%= image_tag @basket[1][0].to_s, alt: @basket[1][0].to_s, class: @basket[1][0].to_s %>
    <img class ="seed" src="https://www.nicepng.com/png/detail/81-813417_seed-clipart-apple-tree-seed-clipart.png" alt="small-tree">
  </div>

  <div class="comparison-card big-card">
    <h3 class="emits"><%= @basket[0][1][:emissions].round() * 10 %> Emits</h3>
    <%= image_tag @basket[0][0].to_s, alt: @basket[0][0].to_s, class: @basket[0][0].to_s %>
    <%= link_to basket_path(retailer: @basket[0][0], basket: @basket[0][1]) do %>
      <%= image_tag "view", alt: "view your basket", class: "view-bskt-btn" %>
    <% end %>
    <h5>Total: Â£<%= @basket[0][1][:price] %>0</h5>
    <img class= "big-tree" src="https://www.pngitem.com/pimgs/m/217-2170494_animated-trees-and-fences-animated-tree-with-branches.png" alt="big-tree">
  </div>

  <div class="comparison-card small-card small-card-right">
    <h3 class="emits"><%= @basket[2][1][:emissions].round() * 10 %> Emits</h3>
    <%= image_tag @basket[2][0].to_s, alt: @basket[2][0].to_s, class: @basket[2][0].to_s %>
    <img class="medium-tree" src="https://www.kindpng.com/picc/m/55-554453_growing-plants-animation-png-transparent-png.png" alt="">
  </div>
</div>



<!--
@basket[0] = best retailer
@basket[1] and [2] are the next ones

@basket[i][0].to_s to get the name of the retailer

@basket[i][1][:price] or [:emissions] to access total price and total emissions
 -->
