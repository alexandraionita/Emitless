<div class="d-flex justify-content-between names-icon">
  <div class="name-quantity">
    <p class="wish-item"><%= @whises.last.item.generic_name.capitalize %></p>
    <p class="wish-item"><%= @whises.last.item.generic_quantity * @whises.last.amount %> <%= @whises.last.item.generic_unit %></p>
  </div>
  <%= link_to plus_amount_wish_list_item_path(@whises.last) do %>
    <p class="wish-item"><i class="fas fa-plus"></i></p>
  <% end %>
  <p class="wish-item"><%= @whises.last.amount %></p>
  <%= link_to minus_amount_wish_list_item_path(@whises.last) do %>
    <p class="wish-item"><i class="fas fa-minus"></i></p>
  <% end %>
  <%= link_to wish_list_item_path(@whises.last), method: :delete do %>
    <p class="wish-item"><i class="fas fa-trash" id="bin"></i></p>
  <% end %>
</div>
