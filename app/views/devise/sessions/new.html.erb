<div class="home-wrap">
  <div class="navbar navbar-expand-sm navbar-light">
    <div class="navbar-container-home">
      <%= link_to root_path do %>
        <%= image_tag "emitless-logo.png", alt: "emitless logo", class: "navbar-header", id: "emitless-logo" %>
      <% end %>
    </div>
  </div>



  <div class="home-container">
    <div class="left-home-div-devise">
      <h1>Lowering emissions, <br>one purchase at a time.</h1>

      <h2>Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: 'devise-btns' %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>

    </div>

    <div class="right-home-div full-width" style="background-image: url(<%= image_path('home-vegetables.jpg') %>);"></div>
  </div>
</div>
