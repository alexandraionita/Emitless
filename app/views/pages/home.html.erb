<div class="home-container">
  <div class="left-half">
    <div id="green-div" style="background-image: url(<%= image_path('greenbg.png') %>);">
      <div class="green-div-content">
        <p id="catch-sentence">Lowering emissions, one purchase at a time.</p>
        <%= form_tag items_path, method: :get ,class: "search-bar" do %>
          <%= text_field_tag :query,
            params[:query],
            id: "home-search-field",
            placeholder: "enter your postcode"
          %>
          <%= submit_tag "Begin", id: "home-begin-btn" %>
        <% end %>
      </div>
    </div>


    <div class="how-to-wrap">
      <div class="how-to-cards">
        <div class="how-to-card">
          <%= image_tag "", alt: "img" %>
          <h6>Fill your basket</h6>
        </div>
        <div class="how-to-card">
          <%= image_tag "", alt: "img" %>
          <h6>Lower your emissions</h6>
        </div>
        <div class="how-to-card">
          <%= image_tag "", alt: "img" %>
          <h6>Get your shopping list!</h6>
        </div>
      </div>

    </div>
  </div>

  <div class="image-div">
  </div>

</div>
